{
  "extends": [
    "@vue/tsconfig/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json",
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue","generated/**/*.ts","types/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@pc/*": ["./src/pc/*"],
      "@h5/*": ["./src/h5/*"],
      "@generated/*": ["./generated/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    //"sourceMap": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "WebWorker"
    ]
  }
}
